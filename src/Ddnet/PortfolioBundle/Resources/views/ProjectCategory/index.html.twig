{# src/Ddnet/PortfolioBundle/Resources/View/ProjectCategory/index.html.twig #}
{% extends '::base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
    <link rel="stylesheet" href="{{ path(' @DdnetPortfolioBundle/Resources/public/css/category.css') }}" />
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset_url }}" type="text/javascript" ></script>  
{% endblock %}

{% block content %}
  <div id="category-content">
  {% for category in results %}
    <div class="category-entry">
      <a href="{{ path('category_show', {'slug':category.slug}) }}">
        <img src="{{ asset('/images/category/thumbnails/' ~ category.slug ~ '.png') }}" alt="{{ category.name|capitalize }}" />
        <h3>{{ category.name|capitalize }}</h3>
        <div class="details">
          <p>
            {{ category.description [0:130]| trim ~ '...' }}
            <a href="{{ path('category_show', { 'slug':category.slug }) }}" class='more-info'>more info&nbsp;&raquo;</a>
          </p>
        </div> 
      </a>
    </div>
  {% else %} 
    <em>no items found.</em>
  {% endfor %}
  </div>
{% endblock %}