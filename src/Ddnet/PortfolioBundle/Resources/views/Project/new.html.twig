{# src/Ddnet/PortfolioBundle/Resources/view/Project/new.html.twig #}
{% extends '::base.html.twig' %}

{% stylesheets '@DdnetPortfolioBundle/Resources/public/css/*' %}
  <link href="{{ asset_url }}" rel="stylesheet" />
  {{ parent() }}
{% endstylesheets %}
{% javascripts '@DdnetPortfolioBundle/Resources/public/js/*'  %}
  {{ parent() }}
  <script src="{{ asset_url }}" type="text/javascript" />  
{% endjavascripts %}
  
{% block content %}
  <div id="portfolio-content">
  <form action="{{ path('portfolio_new') }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.category) }}
    {{ form_row(form.status) }}
    {{ form_row(form.skills) }}
    {{ form_row(form.dev_url) }}
    {{ form_row(form.prod_url) }}

    {{ form_rest(form) }}

    <input type="submit" />
</form>
  </div>
{% endblock %}
  