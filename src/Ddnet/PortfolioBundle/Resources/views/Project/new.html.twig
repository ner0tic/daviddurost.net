{# src/Ddnet/PortfolioBundle/Resources/view/Project/new.html.twig #}
{% extends '::base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
    <link rel="stylesheet" href="{{ path('@DdnetPortfolioBundle/Resources/public/css/project.css') }}" />
    <link rel="stylesheet" href="{{ path('@DdnetUtilityBundle/Resources/public/css/form.css') }}" />
{% endblock %}
{% block javascripts %}
  {{ parent() }}
{% endblock %}
  
{% block content %}
  <div id="portfolio-content">
  <form action="{{ path('portfolio_new') }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.category) }}
    {{ form_row(form.status) }}
    {{ form_row(form.dev_url) }}
    {{ form_row(form.prod_url) }}

    {{ form_rest(form) }}

    <input type="submit" />
</form>
  </div>
{% endblock %}
  